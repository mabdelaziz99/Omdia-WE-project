    </div> 

    <!-- Articles Section -->
    <div class="col-md-8">
      <% if (articles.length === 0) { %>
        <div class="alert alert-warning">No articles found.</div>
      <% } else { %>
          <% articles.forEach(article => { %>
            <a href="articles/<%= article._id %>" class="text-decoration-none text-dark article-link" >
            <div class="col">
              <div class="card h-100 border-0">
                <!-- <% if (article.img1URL.length > 0) { %>
                  <img src="<%= article.img1URL[0] %>" class="card-img-top d-block mx-auto" alt="Image" style="height: auto; max-width: 200px;">
                <% } %> -->
                <div class="card-body">
                  <h5 class="card-title"><%= article.title %></h5>
                  <p>Domains
                    <% if (article.domains && article.domains.length > 0) { %>
                            <% article.domains.forEach((domain) => { %>
                            <a href="/articles?domains=<%= domain %>" class="badge bg-success text-decoration-none me-1">
                    <%= domain %>
                                </a>
                                <% }) %>
                                <% } else { %>
                                    None
                                <% } %>
                
                  | 
                  Topics
                    <% if (article.tags && article.tags.length > 0) { %>
                    <% article.tags.forEach((tag, index) => { %>
                    <a href="/articles?tags=<%= tag %>" class="badge bg-primary text-decoration-none me-1">
                    <%= tag %>
                    </a>
                 <% }) %>
                <% } else { %>
                 None
                <% } %>

                |
                    <% if (article.month) { %>
                    <a href="/articles?month=<%= article.month %>" class="badge bg-secondary text-decoration-none me-1">
                    <%= article.month %>
                    </a>
                <% } else { %>
                 None
                <% } %>
                </p>
                <p>
                  <%= article.summary %>
                </p>
                </div>
              </div>
              <hr>
            </div></a>
          <% }) %>
      <% } %>
      
        </div>

      <!-- Pagination -->
      <% if (totalPages > 1) { %>
        <nav>
          <ul class="pagination">
            <% for (let i = 1; i <= totalPages; i++) { %>
              <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                <form method="GET" action="/articles" class="d-inline">
                  <% selectedDomains.forEach(d => { %>
                    <input type="hidden" name="domains" value="<%= d %>">
                  <% }) %>
                  <% selectedTags.forEach(t => { %>
                    <input type="hidden" name="tags" value="<%= t %>">
                  <% }) %>
                  <input type="hidden" name="page" value="<%= i %>">
                  <button type="submit" class="page-link"><%= i %></button>
                </form>
              </li>
            <% } %>
          </ul>
        </nav>
      <% } %>
    </div>

  </div>
