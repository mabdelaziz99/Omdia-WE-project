      <div class="dropdown mb-3 my-2">
        <button class="btn btn-outline-success dropdown-toggle w-50" type="button" 
                data-bs-toggle="collapse" data-bs-target="#domainList" aria-expanded="false">
          Domains
        </button>

        <div id="domainList" class="collapse show w-75 mt-2">
          <% allDomains.forEach(domain => { %>
            <div class="form-check">
              <input class="form-check-input mx-1" type="checkbox" name="domains" value="<%= domain %>" 
                <%= selectedDomains.includes(domain) ? 'checked' : '' %> id="domain-<%= domain %>">
              <label class="form-check-label" for="domain-<%= domain %>">
                <%= domain.charAt(0).toUpperCase() + domain.slice(1) %>
              </label>
            </div>
          <% }) %>
        </div>
      </div>


        <hr>
        <!-- Tags -->
        <div class="dropdown mb-3 my-2">
          <button class="btn btn-outline-success dropdown-toggle w-50" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
            Topics
          </button>
          <ul class="dropdown-menu w-100" aria-labelledby="dropdownMenuButton">
            <li>
              <% allTags.forEach(tag => { %>
              <div class="form-check">
                <input class="form-check-input mx-1" type="checkbox" name="tags" value="<%= tag %>" 
                  <%= selectedTags.includes(tag) ? 'checked' : '' %> id="tag-<%= tag %>">
                <label class="form-check-label" for="tag-<%= tag %>">
                  <%= tag.charAt(0).toUpperCase() + tag.slice(1) %>
                </label>
              </div>
            </li>
            <% }) %>
          </ul>
        </div>


