<% layout ('./layouts/boilerplate') %>

<a href="/articles" class="text-decoration-none text-dark"><h1>Omdia Articles</h1></a>
<a href="/articles/new" class="text-decoration-none">Add new Article</a>
<div class="container-fluid mt-4">
  <div class="row">

    <!-- Sidebar Filter -->
    <div class="col-md-3">
      <form method="GET" action="/articles" class="border rounded p-3 bg-light">
        
                  <!-- Search Bar -->
        <div class="mb-3">
          <label for="search" class="form-label fw-bold">Search by Title</label>
          <input 
            type="text" 
            class="form-control" 
            name="search" 
            id="search" 
            placeholder="Enter keywords..." 
            value="<%= search %>">
        </div>

        <div class="d-grid gap-2">
          <button type="submit" class="btn btn-primary">Apply Filters</button>
          <a href="/articles" class="btn btn-secondary">Reset Filters</a>
        </div>
        <!-- Domains -->
        <div class="mb-3">
          <label class="form-label fw-bold">Domains</label>
          <% allDomains %>
          <% allDomains.forEach(domain => { %>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="domains" value="<%= domain %>" 
                     <%= selectedDomains.includes(domain) ? 'checked' : '' %> id="domain-<%= domain %>">
              <label class="form-check-label" for="domain-<%= domain %>">
                <%= domain.charAt(0).toUpperCase() + domain.slice(1) %>
              </label>
            </div>
          <% }) %>
        </div>

        <!-- Tags -->
        <div class="mb-3">
          <label class="form-label fw-bold">Tags</label>
          <% allTags.forEach(tag => { %>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="tags" value="<%= tag %>" 
                     <%= selectedTags.includes(tag) ? 'checked' : '' %> id="tag-<%= tag %>">
              <label class="form-check-label" for="tag-<%= tag %>">
                <%= tag %>
              </label>
            </div>
          <% }) %>
        </div>

       
      </form>
    </div>

    <!-- Articles Section -->
    <div class="col-md-9">
      <% if (articles.length === 0) { %>
        <div class="alert alert-warning">No articles found.</div>
      <% } else { %>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
          <% articles.forEach(article => { %>
            <div class="col">
            <a href="articles/<%= article._id %>" class="text-decoration-none text-dark article-link" >
              <div class="card h-100">
                <% if (article.img1URL.length > 0) { %>
                  <img src="<%= article.img1URL[0] %>" class="card-img-top d-block mx-auto" alt="Image" style="height: auto; max-width: 200px;">
                <% } %>
                <div class="card-body">
                  <h5 class="card-title"><%= article.title %></h5>
                  <p><strong>Domains:</strong>
                    <% if (article.domains && article.domains.length > 0) { %>
                            <% article.domains.forEach((domain) => { %>
                            <a href="/articles?domains=<%= domain %>" class="badge bg-success text-decoration-none me-1">
                    <%= domain %>
                                </a>
                                <% }) %>
                                <% } else { %>
                                    None
                                <% } %>
                </p>

                  <p><strong>Tags:</strong>
                    <% if (article.tags && article.tags.length > 0) { %>
                    <% article.tags.forEach((tag, index) => { %>
                    <a href="/articles?tags=<%= tag %>" class="badge bg-primary text-decoration-none me-1">
                    <%= tag %>
                    </a>
                 <% }) %>
                <% } else { %>
                 None
                <% } %>
                </p>

                </div>
              </div>
            </div></a>
          <% }) %>
        </div>
      <% } %>
        </div>

      <!-- Pagination -->
      <% if (totalPages > 1) { %>
        <nav>
          <ul class="pagination">
            <% for (let i = 1; i <= totalPages; i++) { %>
              <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                <form method="GET" action="/articles" class="d-inline">
                  <% selectedDomains.forEach(d => { %>
                    <input type="hidden" name="domains" value="<%= d %>">
                  <% }) %>
                  <% selectedTags.forEach(t => { %>
                    <input type="hidden" name="tags" value="<%= t %>">
                  <% }) %>
                  <input type="hidden" name="page" value="<%= i %>">
                  <button type="submit" class="page-link"><%= i %></button>
                </form>
              </li>
            <% } %>
          </ul>
        </nav>
      <% } %>
    </div>

  </div>
</div>

